<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.ActionBar" parent="@android:style/Widget.Material.ActionBar.Solid">
        <item name="android:background">#00000000</item>
    </style>

    <style name="TextAppearance.CategoryTitle"
           parent="@android:style/TextAppearance.Material.Small">
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Theme.DialogWhenLarge" parent="@android:style/Theme.Material.DialogWhenLarge">
        <item name="android:windowBackground">@android:drawable/status_bar_item_app_background
        </item>
        <item name="android:colorPrimary">#00000000</item>
        <item name="android:colorPrimaryDark">#00000000</item>
        <item name="android:statusBarColor">#00000000</item>
        <item name="android:colorAccent">@android:color/holo_blue_bright</item>
        <item name="android:navigationBarColor">@android:color/background_dark</item>
    </style>

    <style name="Theme.AlertDialog" parent="@android:style/Theme.Material.Dialog.Alert"/>


    <style name="SecurityPreferenceButtonContainer"
           parent="@android:style/Widget.Material.SegmentedButton">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:weightSum">2.0</item>
        <item name="android:dividerPadding">8.0dip</item>
    </style>
    <style name="SecurityPreferenceButton"
           parent="@android:style/Widget.Material.Button.Borderless">
        <item name="android:ellipsize">marquee</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1.0</item>
    </style>

</resources>
